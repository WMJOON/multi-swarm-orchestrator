{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "mental_model_bundle.schema.json",
  "title": "Mental Model Bundle",
  "type": "object",
  "required": ["run_id", "domain", "local_charts", "output_contract", "bundle_ref", "execution_checkpoints", "node_chart_map"],
  "properties": {
    "run_id": {"type": "string", "minLength": 4},
    "domain": {"type": "string", "minLength": 1},
    "bundle_ref": {"type": "string", "minLength": 1},
    "core_axioms": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "local_charts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "name": {"type": "string", "minLength": 1},
          "type": {"type": "string"},
          "theta_gt_band": {
            "type": "string",
            "enum": ["narrow", "moderate", "wide"]
          },
          "theta_gt_range": {
            "type": "object",
            "properties": {
              "min": {"type": "number", "minimum": 0, "maximum": 1},
              "max": {"type": "number", "minimum": 0, "maximum": 1}
            }
          },
          "semantic_entropy_expected": {
            "type": "number", "minimum": 0, "maximum": 1
          },
          "gt_angle_policy": {
            "type": "string",
            "enum": ["inherit", "widen", "override"],
            "default": "inherit"
          }
        },
        "additionalProperties": true
      }
    },
    "module_index": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "node_chart_map": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {"type": "string", "minLength": 1}
      },
      "description": "Topology node_id -> chart ids map"
    },
    "execution_checkpoints": {
      "type": "object",
      "required": ["stage"],
      "properties": {
        "stage": {"type": "string", "enum": ["preflight", "pre_h1", "pre_h2"]}
      },
      "additionalProperties": true
    },
    "output_contract": {
      "type": "object"
    },
    "loading_policy": {"type": "string", "enum": ["eager", "lazy", "on_demand"], "default": "lazy"},
    "gt_angle_config": {
      "type": "object",
      "properties": {
        "default_policy": {
          "type": "string",
          "enum": ["inherit", "widen", "override"],
          "default": "inherit"
        },
        "widen_step": {
          "type": "string",
          "enum": ["narrow_to_moderate", "moderate_to_wide"],
          "description": "How much to widen when gt_angle_policy is widen"
        }
      },
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {"type": "string", "format": "date-time"},
        "generated_by": {"type": "string", "minLength": 1}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
