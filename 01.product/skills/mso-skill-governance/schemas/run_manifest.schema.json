{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MSO Run Manifest",
  "type": "object",
  "required": [
    "run_id",
    "skill_key",
    "status",
    "created_at",
    "updated_at",
    "phases",
    "observer_links"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "pattern": "^[0-9]{8}-[a-z]+-[a-z0-9-]+$"
    },
    "skill_key": {
      "type": "string",
      "enum": [
        "msogov",
        "msowd",
        "msomm",
        "msoed",
        "msotcm",
        "msoac",
        "msoal",
        "msoobs"
      ]
    },
    "status": {
      "type": "string",
      "enum": ["created", "active", "completed", "failed", "archived"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "phases": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["status"],
        "properties": {
          "status": {
            "type": "string",
            "enum": ["pending", "active", "completed", "skipped", "failed"]
          }
        }
      }
    },
    "observer_links": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "parent_run_id": {
      "type": ["string", "null"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "error": {
      "type": ["object", "null"],
      "properties": {
        "message": {
          "type": "string"
        },
        "phase": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
