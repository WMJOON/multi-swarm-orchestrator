{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cc_contracts.schema.json",
  "title": "Coupling Contract Matrix",
  "type": "object",
  "required": ["version", "contracts"],
  "properties": {
    "version": {"type": "string", "minLength": 3},
    "contracts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "producer", "consumer", "status"],
        "properties": {
          "id": {"type": "string", "pattern": "^CC-(0[1-9]|1[0-5])$"},
          "producer": {"type": "string", "minLength": 1},
          "consumer": {"type": "string", "minLength": 1},
          "status": {"type": "string", "enum": ["ok", "warn", "fail"]},
          "notes": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
