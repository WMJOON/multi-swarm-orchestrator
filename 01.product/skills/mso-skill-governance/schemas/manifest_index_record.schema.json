{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MSO Manifest Index Record",
  "type": "object",
  "required": [
    "run_id",
    "skill_key",
    "status",
    "created_at",
    "completed_at",
    "tags",
    "archive_path"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "pattern": "^[0-9]{8}-[a-z]+-[a-z0-9-]+$"
    },
    "skill_key": {
      "type": "string",
      "enum": [
        "msogov",
        "msowd",
        "msomm",
        "msoed",
        "msotcm",
        "msoac",
        "msoal",
        "msoobs"
      ]
    },
    "status": {
      "type": "string",
      "enum": ["completed", "failed", "archived", "active", "created"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "archive_path": {
      "type": ["string", "null"]
    }
  }
}
