{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ticket.schema.json",
  "title": "Task Ticket",
  "type": "object",
  "required": ["id", "status", "created", "task_context_id", "owner", "due_by", "dependencies"],
  "properties": {
    "id": {"type": "string", "pattern": "^TKT-[0-9]{4,}$"},
    "status": {"type": "string", "enum": ["todo", "in_progress", "blocked", "done", "cancelled"]},
    "priority": {"type": "string", "enum": ["low", "medium", "high", "critical"], "default": "medium"},
    "tags": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "dependencies": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "owner": {"type": "string", "minLength": 1},
    "task_context_id": {"type": "string", "minLength": 1},
    "due_by": {"type": "string", "format": "date"},
    "created": {"type": "string", "format": "date"},
    "updated": {"type": "string", "format": "date"}
  },
  "additionalProperties": true
}
