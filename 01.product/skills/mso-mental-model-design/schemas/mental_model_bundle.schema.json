{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "mental_model_bundle.schema.json",
  "title": "Mental Model Bundle",
  "type": "object",
  "required": ["run_id", "domain", "local_charts", "output_contract", "bundle_ref", "execution_checkpoints", "node_chart_map"],
  "properties": {
    "run_id": {"type": "string", "minLength": 4},
    "domain": {"type": "string", "minLength": 1},
    "bundle_ref": {"type": "string", "minLength": 1},
    "core_axioms": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "local_charts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "name": {"type": "string", "minLength": 1},
          "type": {"type": "string"}
        },
        "additionalProperties": true
      }
    },
    "module_index": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "node_chart_map": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {"type": "string", "minLength": 1}
      },
      "description": "Topology node_id -> chart ids map"
    },
    "execution_checkpoints": {
      "type": "object",
      "required": ["stage"],
      "properties": {
        "stage": {"type": "string", "enum": ["preflight", "pre_h1", "pre_h2"]
        }
      },
      "additionalProperties": true
    },
    "output_contract": {
      "type": "object"
    },
    "loading_policy": {"type": "string", "enum": ["eager", "lazy", "on_demand"], "default": "lazy"},
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {"type": "string", "format": "date-time"},
        "generated_by": {"type": "string", "minLength": 1}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
